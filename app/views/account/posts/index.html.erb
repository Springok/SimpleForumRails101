<div class = "col-md-12">

  <h2 class = "text-center">我所發表過的貼文</h2>
  <table class = "table">
    <thead>
      <tr>
        <th>#</th>
        <th>Group</th>
        <th>content</th>
        <th>Create_at</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td>#</td>
        <td><%= link_to(post.group.title, group_path(post.group) ) %></td>
        <td><%= post.context %></td>
        <td><%= post.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
